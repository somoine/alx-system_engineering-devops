#!/usr/bin/env bash
# Ensure Nginx is running as 'nginx' user and listening on port 8080
sudo service nginx restart
# Check if Nginx is running as the 'nginx' user
ps aux | grep '[n]ginx' | awk '{print $1}' | grep -q '^nginx$'
# Check if Nginx is listening on port 8080
ss -plnt | grep ':8080' > /dev/null
